function b {
    (
        exec &>/dev/null
        ${@} & disown
    )
}

function x {
    local args="$@"
    local input="$([ ! -t 0 ] && cat)"
    (
        (
            local output=$(xargs ${args} <<<"${input}" 2>&1)
            local ret="$?"
            case "${ret}" in
                '1'|'126'|'127')
                    >&2 echo "$output"
                    ;;
            esac
        ) &
        disown
    )
}

function __idle {
    local OK="$@"
    $OK &
}
function idle {
    local child=''
    case "$@" in
        ''|*[!0-9]*)
            __IDLE=1 SHLVL="$(($SHLVL+1))" __idle ${@:-bash}
            child="$!"
            ;;
    esac
    renice    -n 19    "${child:-$@}" &>/dev/null
    chrt   -p -i  0    "${child:-$@}" &>/dev/null
    ionice    -c  3 -p "${child:-$@}" &>/dev/null
    [ -n "${child}" ] && fg &>/dev/null
}
complete -F _command idle

