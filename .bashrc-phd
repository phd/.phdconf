function x {
    local args="$@"
    local input="$([ ! -t 0 ] && cat)"
    (
        (
            local output=$(xargs ${args} <<<"${input}" 2>&1)
            local ret="$?"
            case "${ret}" in
                '1'|'126'|'127')
                    >&2 echo "$output"
                    ;;
            esac
        ) &
        disown
    )
}

function idle {
    local child=''
    case "$@" in
        ''|*[!0-9]*)
            ${@:-bash} &
            child="$!"
            ;;
    esac
    renice    -n 19    "${child:-$@}" &>/dev/null
    chrt   -p -i  0    "${child:-$@}" &>/dev/null
    ionice    -c  3 -p "${child:-$@}" &>/dev/null
    [ -n "${child}" ] && fg &>/dev/null
}

